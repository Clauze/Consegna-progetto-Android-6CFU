<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EmbChat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/default_color</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/default_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
    </style>
    <style name="DefaultStyle">
        <item name="android:background">@color/default_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ChatOtherText">
        <item name="android:background">@color/secondary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="FAB">
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/default_color</item>
    </style>
    <style name="Toolbar">
        <item name="android:background">@color/toolbar_default_color</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:titleTextColor" tools:ignore="NewApi">@color/white</item>
    </style>
    <style name="DialogBox">
        <item name="android:background">@color/white</item>
    </style>
    <style name="DeleteButton">
        <item name="android:src">@drawable/ic_delete_24</item>
    </style>
    <style name="ButtonTheme">
        <item name="android:backgroundTint">@color/default_color</item>
    </style>
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorControlActivated">@color/default_color</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">@color/default_color</item>
    </style>
</resources>